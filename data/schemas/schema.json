      "additionalProperties": false,
      "properties": {
        "uuid": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "step_type": {
          "const": "datetime",
          "type": "string"
        },
        "date_completed": {
          "type": "string"
        }
      },
      "required": [
        "uuid",
        "description",
        "step_type",
        "date_completed"
      ],
      "type": "object"
    },
    "Personnel": {
      "additionalProperties": false,
